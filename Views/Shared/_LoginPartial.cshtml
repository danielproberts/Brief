@using Microsoft.AspNetCore.Identity
@using Brief.Areas.Identity.Data

@inject SignInManager<BriefUser> SignInManager
@inject UserManager<BriefUser> UserManager

<div>
    <ul class="navbar-nav">
        <li class="nav-item text-light" style="border-right: solid 1px; padding-right: 1px;">
            <a class="nav-link text-light" id="login" data-target="#loginModal" data-toggle="modal">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" id="register" asp-area="Identity" asp-controller="Account" asp-action="Register">Sign Up</a>
        </li>
    </ul>
</div>

<div class="modal fade" id="loginModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header pb-0">
                <h1>Login</h1>
            </div>
            <div class="modal-body">
                <form class="signin-form p-0" >
                    <div class="form-group mb-0">
                        <label class="control-label mb-0">Email</label>
                        <input type="text" class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group mb-0">
                        <label class="control-label mb-0">Password</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer p-2">
                <input class="btn btn-light" type="button" value="Login" onclick="location.href='@Url.Action("Login", "Account")'" />
            </div>
        </div>
    </div>
</div>
