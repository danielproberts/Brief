@model Brief.Models.CreateBlog

<head>
    <link rel="stylesheet" href="~/css/Brief.css" />
</head>

<div class="container">
    <h1 class="mt-3">New Blog Entry</h1>
</div>

<hr />

<div class="container">
    <form id="blogCreation">
        <div class="form-group">
            <label class="control-label">Blog Title</label>
            <input asp-for="BlogTitle" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Body</label>
            <textarea asp-for="BlogContent" type="text" class="form-control blog-textarea" rows="10"> </textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
